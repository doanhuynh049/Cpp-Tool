# rtaskyn -- ask a yes/no question.
# $1 = question
# Return 0 for yes, and 1 for no.
#
#

answer=y
rtprompt "$1 [y]: "
read answer
until [ ];
do
  case "$answer" in
    [Yy] ) exit 0
            ;;
    "" ) exit 0
            ;;
    [Nn] ) exit 1
            ;;
  esac
  echo "Please type y or n."
  rtprompt "$1 [y]: "
  read answer
done
